@page
@model RecipeUI.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

    <form method="post">
        <input hidden asp-for="@Model.Recipe.Id" />
        <div class="border" p-3 mt-2>
            <div class="row" pb-4>
                <h2 class="text-primary pl-3">Delete</h2>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Recipe.Title"></label>
                <input asp-for="@Model.Recipe.Title" disabled class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Delete</button>
            <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to list</a>
        </div>
    </form>
