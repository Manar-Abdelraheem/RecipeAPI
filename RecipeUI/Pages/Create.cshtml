@page
@model RecipeUI.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

    <form method="post">
        <div class="border" p-3 mt-2>
            <div class="row" pb-4>
                <h2 class="text-primary pl-3">Add recipe</h2>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Recipe.Title"></label>
                <input asp-for="@Model.Recipe.Title" class="form-control" />
                <span asp-validation-for="@Model.Recipe.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Recipe.Ingredients"></label>
                <input asp-for="@Model.Recipe.Ingredients" class="form-control" />
                <span asp-validation-for="@Model.Recipe.Ingredients" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Recipe.Instructions"></label>
                <input asp-for="@Model.Recipe.Instructions" class="form-control" />
                <span asp-validation-for="@Model.Recipe.Ingredients" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Recipe.Categories"></label>
                <input asp-for="@Model.Recipe.Categories" class="form-control" />
                <span asp-validation-for="@Model.Recipe.Categories" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Add</button>
        </div>
    </form>

